{
    "name": "shutdown-manager",
    "version": "1.0.0",
    "description": "Bilgisayar Kapatma Yöneticisi - Zamanlayıcı ve Uzaktan Kapatma",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder --win",
        "build:portable": "electron-builder --win portable"
    },
    "author": "ShutdownManager",
    "license": "MIT",
    "devDependencies": {
        "@electron/packager": "^19.0.5",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.shutdownmanager.app",
        "productName": "Shutdown Manager",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "renderer/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "requestedExecutionLevel": "requireAdministrator"
        },
        "nsis": {
            "oneClick": true,
            "perMachine": true,
            "allowToChangeInstallationDirectory": false,
            "shortcutName": "Shutdown Manager"
        },
        "portable": {
            "artifactName": "ShutdownManager-Portable.exe"
        }
    },
    "dependencies": {
        "axios": "^1.13.5",
        "form-data": "^4.0.5",
        "node-telegram-bot-api": "^0.67.0"
    }
}
